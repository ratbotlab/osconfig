{
    "version": "2.0.0",
    "tasks": [
    {
        "label": "ROS: catkin_make",
        "type": "shell",
        "command": "catkin_make",
        "args": [
            "-j32",
            "-l32",
            "-DCMAKE_BUILD_TYPE=Debug"
        ],
        "problemMatcher": [],
        "group": {
            "kind": "build",
            "isDefault": true
        }
    },
    {
        "label": "ROS: catkin_make one package",
        "type": "shell",
        "command": "catkin_make",
        "args": [
            "--pkg",
            "<your package name, e.g. hello_vs_code>",
            "-j32",
            "-l32",
            "-DCMAKE_BUILD_TYPE=Debug"
        ],
        "problemMatcher": [],
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }]
}